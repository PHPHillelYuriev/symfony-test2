{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <!-- Article List -->

            <div class="col-sm-12 col-md-8">
                <h3 class="text-center pb-3">{{ category.name|title }}</h3>
                
                {% for post in category.posts %}

                    <div class="article-container my-1">
                        <a href="{{ path('showPostById', {'id': post.id}) }}">
                            <img class="article-img" src="{{ asset(asset(post.preview)) }}">
                            <div class="article-title d-inline-block pl-3 align-middle">
                                <span>{{ post.title|title }}</span>
                                <br>
                                <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/alien-profile.png') }}">{{ post.author }}</span>
                                <span class="pl-5 article-details float-right">{{ post.publishedAt|date("d.m.Y G:i:s") }}</span>
                            </div>
                        </a>
                    </div>
            
                {% endfor %}
            </div>
                    
        </div>
    </div>
{% endblock %}
